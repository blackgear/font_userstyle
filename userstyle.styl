ENGFONT  = 'Helvetica Neue'
MONOFONT = 'Essential PragmataPro'

body
  -webkit-font-smoothing subpixel-antialiased !important
  font-family CJKFONT

for FONT in CONFIG
  @font-face
    font-family FONT
    unicode-range U+2E80-FFFF
    src local(CJKFONT)
  if CONFIG[FONT] == 'ENG'
    @font-face
      font-family FONT
      unicode-range U+0000-2E7F
      src local(FONT)
  if CONFIG[FONT] == 'CJK'
    @font-face
      font-family FONT
      unicode-range U+0000-2E7F
      src local(ENGFONT)
  if CONFIG[FONT] == 'MONO'
    @font-face
      font-family FONT
      unicode-range U+0000-2E7F
      src local(MONOFONT)

pre, code
  font-family MONOFONT CJKFONT !important
